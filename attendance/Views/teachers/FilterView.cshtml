@model attendance.Models.teacher
@{
    ViewBag.Title = "FilterView";
}

<h2>FilterView</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeacherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phoneNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeacherEmail)
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.filterView)
    {
        <tr>
            <td>
                @item.CourseName
            </td>
            <td>
                @item.TeacherName
            </td>
            <td>
                @item.position
            </td>
            <td>
                @item.phoneNo
            </td>
            <td>
                @item.hour
            </td>
            <td>
                @item.TeacherEmail
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
